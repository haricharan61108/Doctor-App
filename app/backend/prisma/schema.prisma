generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Patient {
  id             String   @id @default(uuid())
  googleId       String?  @unique
  email          String   @unique
  name           String?
  password       String?
  avatarUrl      String?
  authProvider   AuthProvider @default(GOOGLE)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
enum AuthProvider {
  GOOGLE
  CREDENTIALS
}